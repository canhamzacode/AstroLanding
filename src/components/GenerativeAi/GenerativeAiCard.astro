---
import { Image } from "astro:assets";

const {info, title, description, img} = Astro.props;
---

<div class="md:pt-12 pt-6 md:px-12 px-6 border-2 border-neutral-800 rounded-2xl">
    <p class="uppercase leading-4 text-xs tracking-[4px] mb-4 lg:mb-6 z-10 relative">
      {info}
    </p>
    <p class="md:text-[1.625rem] text-3.5xl leading-tight md:leading-8 mb-2 font-aeonik z-10 relative">
      {title}
    </p>
    <p class="z-10 mb-8 leading-6 md:mb-18 text-zinc-400">{description}</p>
    <div class="h-[250px]">
      <Image src={img} alt={info} class="w-full h-full object-cover" />
    </div>
</div>